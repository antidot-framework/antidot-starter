{
  "name": "antidot-fw/antidot-framework-starter",
  "type": "project",
  "license": "BSD-2-Clause",
  "authors": [
    {
      "name": "kpicaza"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/antidot-framework/psr11-monolog"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "antidot-fw/cli": "^1.1.0",
    "antidot-fw/container": "^0.1.5",
    "antidot-fw/event-dispatcher": "^2.1",
    "antidot-fw/framework": "@dev",
    "antidot-fw/logger": "^1.1.0",
    "antidot-fw/monolog-react-handler": "^0.1",
    "antidot-fw/runtime": "^0.1",
    "antidot-fw/symfony-config-translator": "^1.1.0",
    "antidot-fw/yaml-config-provider": "^0.1.0",
    "react/async": "@dev",
    "symfony/runtime": "^5.3",
    "wshafer/psr11-monolog": "@dev"
  },
  "require-dev": {
    "antidot-fw/dev-tools": "^0.1.1",
    "filp/whoops": "^2.5",
    "franzl/whoops-middleware": "^2.0",
    "laminas/laminas-component-installer": "^2.6",
    "phpro/grumphp": "~1.0",
    "phpstan/phpstan": "^1.2",
    "phpunit/phpunit": "^9.2",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.4",
    "symfony/var-dumper": "^5.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "test"
    }
  },
  "scripts": {
    "check-all": [
      "@cs-check",
      "@test",
      "@inspect"
    ],
    "dev-server": "php -S ${APP_HOST:-0.0.0.0:3000} -t public",
    "cs-check": "phpcs src --colors",
    "cs-fix": "phpcbf src --colors",
    "inspect": "phpstan analyse src -l7 --ansi",
    "test": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laminas": {
      "component-whitelist": [
        "antidot-fw/framework",
        "antidot-fw/logger",
        "antidot-fw/dbal-adapter",
        "antidot-fw/doctrine",
        "antidot-fw/message-queue",
        "antidot-fw/no-floc-middleware",
        "antidot-fw/session",
        "antidot-fw/cli",
        "antidot-fw/phug-template-renderer",
        "antidot-fw/event-dispatcher",
        "antidot-fw/symfony-config-translator",
        "wshafer/psr11-monolog"
      ]
    }
  }
}
