{
  "name": "kpicaza/antidot-framework",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "kpicaza",
      "email": "kpicaza.sound@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "path",
      "url": "modules/framework"
    }
  ],
  "require": {
    "php": "^7.2.13",
    "antidot/framework": "@dev"
  },
  "require-dev": {
    "phpro/grumphp": "^0.15.0",
    "phpstan/phpstan": "^0.11.5",
    "phpunit/phpunit": "^8.0",
    "squizlabs/php_codesniffer": "^3.4",
    "symfony/var-dumper": "^4.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AppTest\\": "test"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@inspect"
    ],
    "cs-check": "phpcs src --colors",
    "cs-fix": "phpcbf src --colors",
    "inspect": "phpstan analyse src -l7 --ansi",
    "test": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true
  }
}
